<% @gen="fiction" %>
<div class="row">
   <% @books.where("genre like ?", @gen).each do |book| %>
      <div class="col-md-4">
         <ul class="list-group">
            <li class="list-group-item active"><%= book.title %></li>
            <li class="list-group-item"><%= link_to (image_tag book.image_url, :style => "height:140px"), book %></li>
            <li class="list-group-item">Author: <%= book.author %></li>
            <li class="list-group-item"><strong>Description:</strong><%= book.description %></li>
            <li class="list-group-item">Cost: &#8364;<%= book.cost.round(2) %></li>        
            <li class="list-group-item">Genre: <%= book.genre %></li>
         </ul>
      </div>      
   <% end %>
</div>
